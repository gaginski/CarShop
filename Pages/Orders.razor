@page "/orders"
@using CarShop.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@attribute [Authorize]

@inject ApplicationDbContext Db
@inject AuthenticationStateProvider AuthStateProvider

<h3>Pedidos</h3>

<AuthorizeView>
    <Authorized>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0 w-100">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 70px;">Id</th>
                                <th>Cliente</th>
                                <th class="text-center">Data</th>
                                <th class="text-end">Total</th>
                                <th class="text-center">Vendedor</th>

                                @if (isAdmin)
                                {
                                    <th class="text-end d-none d-md-table-cell">Comissão (%)</th>
                                    <th class="text-end d-none d-md-table-cell">Comissão</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in orders)
                            {
                                <tr>
                                    <td>@item.Order.Id</td>
                                    <td>@item.Order.CustomerName</td>
                                    <td class="text-center">
                                        @item.Order.OrderDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td class="text-end">
                                        @item.Order.Total.ToString("N2")
                                    </td>
                                    <td class="text-center">
                                        @item.Order.VendorId
                                    </td>

                                    @if (isAdmin)
                                    {
                                        <td class="text-end d-none d-md-table-cell">
                                            @(item.Commission?.ComissionPercentage.ToString("N2") ?? "-")
                                        </td>
                                        <td class="text-end d-none d-md-table-cell">
                                            @(item.Commission?.ComissionAmount.ToString("N2") ?? "-")
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </Authorized>

    <NotAuthorized>
        <p>Faça login para acessar esta página.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<OrderWithCommission> orders = new();
    private bool isAdmin;
    private bool isVendor;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            isAdmin = user.IsInRole("Admin");
            isVendor = user.IsInRole("Vendor") || user.IsInRole("User");

            if (!user.Identity?.IsAuthenticated ?? true)
                return;

            if (isAdmin)
            {
                orders = await (
                    from o in Db.Orders
                    join c in Db.VendorComissions on o.Id equals c.OrderId into oc
                    from c in oc.DefaultIfEmpty()
                    orderby o.OrderDate descending
                    select new OrderWithCommission
                    {
                        Order = o,
                        Commission = c
                    }).ToListAsync();
            }
            else if (isVendor)
            {
                var userId = user.FindFirst("uid")?.Value;

                orders = await (
                    from o in Db.Orders
                    join c in Db.VendorComissions on o.Id equals c.OrderId into oc
                    from c in oc.DefaultIfEmpty()
                    where o.VendorId.ToString().Equals(userId)
                    orderby o.OrderDate descending
                    select new OrderWithCommission
                    {
                        Order = o,
                        Commission = c
                    }).ToListAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Erro ao carregar pedidos: " + ex.Message;
            Console.WriteLine(ex);
        }
    }

    private class OrderWithCommission
    {
        public Order Order { get; set; } = null!;
        public VendorComission? Commission { get; set; }
    }
}
