@page "/login"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Nav
@inject IJSRuntime JS

<h3>Login</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<EditForm Model="model" OnValidSubmit="DoLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Usuário</label>
        <InputText class="form-control" @bind-Value="model.Username" />
    </div>

    <div class="mb-3">
        <label class="form-label">Senha</label>
        <InputText class="form-control" type="password" @bind-Value="model.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
</EditForm>

@code {
    private LoginModel model = new();
    private string? errorMessage;

    private async Task DoLogin()
    {
        try
        {
            errorMessage = null;

            var statusCode = await JS.InvokeAsync<int>("carShopLogin.login", model);

            if (statusCode == 200)
            {
                Nav.NavigateTo("/", forceLoad: true);
            }
            else if (statusCode == 401)
            {
                errorMessage = "Usuário ou senha inválidos.";
            }
            else
            {
                errorMessage = $"Erro ao tentar fazer login. Código: {statusCode}.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Erro ao tentar fazer login: " + ex.Message;
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Informe o usuário.")]
        public string Username { get; set; } = string.Empty;

        [Required(ErrorMessage = "Informe a senha.")]
        public string Password { get; set; } = string.Empty;
    }
}
